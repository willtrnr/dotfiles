apiVersion: kubectl.config.k8s.io/v1beta1
kind: Preference
defaults:
  - command: apply
    options:
      - name: server-side
        default: 'true'
  - command: drain
    options:
      - name: delete-emptydir-data
        default: 'true'
      - name: ignore-daemonsets
        default: 'true'
  - command: exec
    options:
      - name: stdin
        default: 'true'
      - name: tty
        default: 'true'
