{
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.maxFileSize": "2MB",
  "coc.preferences.useQuickfixForLocations": true,

  "codeLens.enable": true,

  "diagnostic.enableSign": true,
  "diagnostic.errorSign": "\u00a0\uf057",    //  - cross in filled circle
  "diagnostic.warningSign": "\u00a0\uf071",  //  - exclamation in filled triangle
  "diagnostic.infoSign": "\u00a0\uf06a",     //  - exclamation in filled circle
  "diagnostic.hintSign": "\u00a0~",          // ~ - regular tilde


  "suggest.completionItemKindLabels": {
    "keyword": "\uf292",        //  - pound sign
    "variable": "\uf52a",       //  - greek letter 'a' alpha
    "value": "\uf89f",          //  - number format icon
    "operator": "\u03a3",       // Σ - greek letter 'S' sigma
    "constructor": "\uf0d0",    //  - magic wand
    "function": "\u03bb",       // λ - greek letter 'l' lambda
    "reference": "\uf4a8",      //  - share arrow icon
    "constant": "\uf8fe",       //  - greek letter 'p' pi
    "method": "\uf794",         //  - stylized 'f'
    "struct": "\ufb44",         // פּ - tree structure
    "class": "\ue79b",          //  - box
    "interface": "\uf1e6",      //  - power plug
    "text": "\ue612",           //  - paragraph
    "enum": "\uf778",           //  - bullet list
    "enumMember": "\uf02b",     //  - tag
    "module": "\uf40d",         //  - code file
    "color": "\ue22b",          //  - paint palette
    "property": "\uf0ad",       //  - wrench
    "field": "\uf0ad",          //  - wrench
    "unit": "\uf475",           //  - ellipsis in filled rectangle
    "event": "\uf0e7",          //  - lightning bolt
    "file": "\uf723",           //  - blank file
    "folder": "\uf114",         //  - closed folder
    "snippet": "\ue60b",        //  - self-closing curly braces
    "typeParameter": "\uf595",  //  - erlenmeyer flask
    "default": "\uf29c"         //  - question mark in circle
  },

  "rust-analyzer.checkOnSave.command": "clippy",

  "languageserver": {
    "solidity": {
      "command": "solidity-language-server",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "solidity"
      ],
      "rootPatterns": [
        "package.json"
      ]
    }
  }
}
