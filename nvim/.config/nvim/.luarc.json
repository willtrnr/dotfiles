{
  "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/refs/heads/master/setting/schema.json",
  "diagnostics": {
    "globals": [
      "vim"
    ],
    "unusedLocalExclude": ["_*"]
  },
  "runtime": {
    "version": "LuaJIT",
    "path": [
      "lua/?.lua",
      "lua/?/init.lua"
    ]
  },
  "workspace": {
    "library": [
      "lazy.nvim/lua",
      "~/.local/share/nvim/plugged",
      "/usr/share/nvim/runtime/lua"
    ]
  }
}
