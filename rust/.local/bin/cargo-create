#!/usr/bin/env bash

set -e

PKGNAME="$2"
if [ -z "$PKGNAME" ]; then
  exit 1
fi

mkdir -p "${PKGNAME}/${PKGNAME}/src" "${PKGNAME}/.cargo"

pushd "${PKGNAME}" || exit 1
trap 'popd' EXIT

git init

curl -sSf https://www.toptal.com/developers/gitignore/api/rust \
  | sed 's/^Cargo.lock/#Cargo.lock/' > .gitignore

cat > .editorconfig <<EOF
# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
indent_size = 4
EOF

"${HOME}/.local/bin/mit" > LICENSE

cat > README.md <<EOF
${PKGNAME}
==========
EOF

cat > Cargo.toml <<EOF
[workspace]
members = [
  "${PKGNAME}",
]
resolver = "3"

[workspace.package]
version = "0.1.0"
authors = [
  "github.com/willtrnr",
]
edition = "2024"
rust-version = "1.90"
repository = "https://github.com/willtrnr/${PKGNAME}"
license = "MIT"
publish = false

[workspace.dependencies]
${PKGNAME} = { path = "${PKGNAME}" }

mimalloc = "0.1"

[profile.release]
codegen-units = 1
lto = true
opt-level = 3
panic = "abort"
split-debuginfo = "packed"
strip = "debuginfo"

[profile.dev.build-override]
opt-level = 3
debug = false
incremental = false
codegen-units = 1
EOF

cat > rust-toolchain.toml <<EOF
[toolchain]
channel = "stable"
profile = "default"
targets = [
  "x86_64-unknown-linux-gnu",
]
EOF

cat > deny.toml <<EOF
[graph]
targets = [
  "x86_64-unknown-linux-gnu",
]
all-features = true

[advisories]
version = 2
unmaintained = "workspace"
git-fetch-with-cli = true

[licenses]
version = 2
allow = [
  "MIT",
]

[licenses.private]
ignore = true

[bans]
deny = [
  { crate = "log", deny-multiple-versions = true },
  { crate = "opentelemetry", deny-multiple-versions = true },
  { crate = "rustls", reason = "use native-tls instead" },
  { crate = "tracing", deny-multiple-versions = true },
  { crate = "webpki-roots", reason = "use system roots instead" },
]

[sources]
unused-allowed-source = "allow"
EOF

cat > .taplo.toml <<EOF
[formatting]
inline_table_expand = false
EOF

cat > "${PKGNAME}/Cargo.toml" <<EOF
[package]
name = "${PKGNAME}"
description = ""
version.workspace = true
authors.workspace = true
edition.workspace = true
rust-version.workspace = true
repository.workspace = true
license.workspace = true
publish.workspace = true

[dependencies]
mimalloc = { workspace = true }

[features]
default = []
EOF

echo > "${PKGNAME}/src/lib.rs"

cat > "${PKGNAME}/src/main.rs" <<EOF
#[global_allocator]
static GLOBAL: mimalloc::MiMalloc = mimalloc::MiMalloc;

pub fn main() -> Result<(), Box<dyn std::error::Error>> {
    Ok(())
}
EOF
