# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{java,py,cs,vb,rs,bazel,bzl}]
indent_size = 4

[*.md]
max_line_length = 88

[{BUILD,WORKSPACE}]
indent_size = 4

[Makefile]
indent_style = tab
